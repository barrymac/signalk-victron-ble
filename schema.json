{
  "type": "object", 
  "properties": {
    "adapter": {
      "type": "string",
      "title": "Bluetooth Adapter Interface",
      "description": "Linux HCI interface (hci0, hci1 etc)",
      "default": "hci0",
      "enum": ["hci0", "hci1"],
      "options": {
        "enum_titles": ["Primary (hci0)", "Secondary (hci1)"]
      }
    },
    "devices": {
      "type": "array",
      "title": "Victron Devices",
      "items": {
        "type": "object",
        "required": [
          "id",
          "mac",
          "key"
        ],
        "properties": {
          "id": {
            "type": "string",
            "title": "Device ID in SignalK",
            "description": "Base path for converter metrics (electrical.converters.[ID])",
            "default": "0"
          },
          "linkToEngine": {
            "type": "boolean",
            "title": "Link Charger State to Engine Status",
            "description": "Set engine running status based on charger activity",
            "default": false
          },
          "engineId": {
            "type": "string", 
            "title": "Engine Identifier",
            "description": "Target engine ID for propulsion status (e.g. 'portEngine')",
            "default": "mainEngine",
            "options": {
              "dependencies": {
                "linkToEngine": true
              }
            }
          },
          "mac": {
            "type": "string",
            "title": "MAC Address",
            "pattern": "([0-9A-Fa-f]{2}:){5}[0-9A-Fa-f]{2}",
            "default": "00:00:00:00:00:00"
          },
          "key": {
            "type": "string",
            "title": "Advertisement Key",
            "default": "00000000000000000000000000000000"
          },
          "secondary_battery": {
            "type": "string",
            "title": "Secondary Battery Device ID (if relevant)",
            "default": null
          }
        }
      }
    }
  }
}
